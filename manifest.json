{
  "manifest_version": 3,
  "name": "BDC Tooltip",
  "version": "1.0",
  "description": "Enhances the Arena Breakout Infinite BDC system.",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.arenabreakoutinfinite.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["*://*.arenabreakoutinfinite.com/*"]
    }
  ]
}
